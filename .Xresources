!! reload with xrdb

!! Colorscheme

! hard contrast: *background: #1d2021
*background: #282828
*soft-background: #505050
! soft contrast: *background: #32302f
*foreground: #dfdfdf
*soft-foreground: #666666
! theme colors
*primary-color: #663F8C
*secondary-color: #DAA058
*alert-color: #bd2c40
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2

!! i3wm
! Text
i3wm.brightText: #ffffff
i3wm.dimText: #888888
! Color shades 
! focused
i3wm.focusedColor: #DAA058
i3wm.focusedBorderColor: #DBAD74
i3wm.indicatorColor: #FF9819
! inactive
i3wm.inactiveColor: #75552D
i3wm.inactiveBorderColor: #333333
! unfocused
i3wm.unfocusedColor: #222222
i3wm.unfocusedBorderColor: #333333
! urgent
i3wm.urgentBorder: #FF3B55
i3wm.urgentBorderColor: #FF6F6F

!! URxvt Appearance
URxvt.font: xft:Bitstream Vera Sans mono:size=10:antialias=true
!,xft:Roboto Mono for Powerline:size=10:antialias=true
URxvt.boldFont: xft:Bitstream Vera Sans mono:bold:size=10:antialias=true
!,xft:Roboto Mono for Powerline:size=10:antialias=true
URxvt*italicFont: xft:Bitstream Vera Sans mono:italic:pixelsize=10:antialias=true
!,xft:Roboto Mono for Powerline:size=10:antialias=true
URxvt*boldItalicFont: xft:Bitstream Vera Sans mono:bold:italic:pixelsize=10:antialias=true
!,xft:Roboto Mono for Powerline:size=10:antialias=true
URxvt.letterSpace: 0
URxvt.lineSpace: 0
URxvt.geometry: 92x24
URxvt.internalBorder: 12
!URxvt.borderColor: #282828
URxvt.cursorBlink: true
URxvt.cursorUnderline: false
URxvt.saveline: 10000
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.urgentOnBell: true
URxvt.depth: 24
URxvt.iso14755: false

!! Transparency
URxvt.transparent: true
URxvt.shading:     10

!! Common Keybinds for Navigations
URxvt.keysym.Shift-Up: command:\033]720;1\007
URxvt.keysym.Shift-Down: command:\033]721;1\007
URxvt.keysym.Control-Up: \033[1;5A
URxvt.keysym.Control-Down: \033[1;5B
URxvt.keysym.Control-Right: \033[1;5C
URxvt.keysym.Control-Left: \033[1;5D

!! Copy Paste & Other Extensions
URxvt.perl-ext-common: default,clipboard,url-select,keyboard-select
URxvt.copyCommand: xclip -i -selection clipboard
URxvt.pasteCommand: xclip -o -selection clipboard
URxvt.keysym.M-c: perl:clipboard:copy
URxvt.keysym.M-v: perl:clipboard:paste
URxvt.keysym.M-C-v: perl:clipboard:paste_escaped
URxvt.keysym.M-Escape: perl:keyboard-select:activate
URxvt.keysym.M-s: perl:keyboard-select:search
URxvt.keysym.M-u: perl:url-select:select_next
URxvt.urlLauncher: firefox
URxvt.underlineURLs: true
URxvt.urlButton: 1
